<div class="authincation h-100 modal-utils js-modal-change-password">
    <div class="container h-100">
        <div class="row justify-content-center h-100 align-items-center">
            <div class="col-md-6">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form" id="modal-change-password-form">
                                <h4 class="text-center mb-4">Change your password</h4>

                                <div id="error_change_pass">
                                    
                                </div>
                                
                                <form action="/change-password" method="post">
                                    <div class="form-group">
                                        <label class="mb-1" for="old_password"><strong>Old password</strong></label>
                                        <input type="password" class="form-control" placeholder="Old password..." name="old_password" id="old_password" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" for="password_channge"><strong>New Password</strong></label>
                                        <input type="password" class="form-control" placeholder="New password..." name="password" id="password_channge" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" for="re_password"><strong>Re-enter password</strong></label>
                                        <input type="password" class="form-control" placeholder="New password..." name="re_password" id="re_password" required>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}" id="csrf_token_change_pass">
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary btn-block" id="js-request-change-password">Sign up</button>
                                    </div>
                                    <div class="text-center mt-4">
                                        <button class="btn btn-primary-2 btn-block" id="js-close-modal-change-password">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="error_template_change_pass" type="text/x-handlebars">

    \{{#each data}}
    <div class="alert \{{#if ../status}}alert-success\{{else}}alert-danger\{{/if}} alert-dismissible fade show" id="error_change_pass_detail">
        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
        <strong>\{{#if ../status}}Success!\{{else}}Error!\{{/if}}</strong> \{{this}}
    </div>
    \{{/each}}

</script>