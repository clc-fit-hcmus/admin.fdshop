<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                    <p class="mb-0">Your business dashboard template</p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Layout</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Blank</a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-3 ">
                                <div class="tab-pane fade show active" id="first">
                                    <img class="img-fluid" src={{fd.avatar}} alt="">
                                </div>
                            </div>
                            <!--Tab slider End-->
                            <div class="col-xl-9 col-sm-12">
                                <div class="product-detail-content">
                                    <!--Product details-->
                                    <div class="new-arrival-content pr">
                                        <h4>{{fd.name}}</h4>
                                        <div class="star-rating mb-2">
                                            <ul class="produtct-detail-tag">
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                            </ul>
                                            <span class="review-text">(34 reviews) / </span><a class="product-review" href="#">Write a review?</a>
                                        </div>
                                        <p class="price">${{fd.price}}</p>
                                        <p>Product code: <span class="item">{{fd._id}}</span> </p>
                                        <p class="text-content">{{fd.description}}</p>
                                        <div class="shopping-cart mt-3">
                                            <a class="btn btn-primary btn-lg" href="/update-fd/{{fd._id}}"><i class="fa fa-pencil mr-2"></i>Update</a>
                                            <form method="POST" action="/delete-fd/{{fd._id}}?_method=DELETE" class="btn">
                                                <button type="submit" class="btn btn-primary-2 btn-lg"><i class="fa fa-trash mr-2"></i>Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->